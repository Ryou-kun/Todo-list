<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% newListItems.forEach(i=> { %>
      <form action="/delete" method="post" >
        <div class="item">
          <input name= "checkbox" value="<%= i._id %>" type="checkbox" onchange="this.form.submit()">
          <p><%=  i.item  %></p>
        </div>
        <input type="hidden" name="hidden" value="<%= listTitle %>">
      </form>
      <% }) %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="butt" value="<%= listTitle %>">+</button>
      </form>
  </div>

